  <string>This app uses the microphone during consultations.</string>

  <!-- Flutter defaults -->
  <key>UIApplicationSupportsIndirectInputEvents</key>
  <true/>

  <!-- If you open arbitrary URLs (e.g., Firebase Dynamic Links or external links), ATS relax: -->
